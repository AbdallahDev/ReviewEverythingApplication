<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e3c3c"
    tools:context="com.example.abdallahsarayrah.revieweverythingapplication.RadioButtonActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Color1" />

        <RadioButton
            android:id="@+id/radioButtonColor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color2"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="103dp" />

        <RadioButton
            android:id="@+id/radioButtonColor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color3" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
